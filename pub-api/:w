use std::collections::HashMap;

use crate::test_helper::spawn;

#[tokio::test]
async fn check_status_of_task() {
    let mut body = HashMap::new();
    body.insert("status", 1);
    let app = spawn().await;
    let client = reqwest::Client::new();
    client
        .post(format!("{}/task/status", app.address))
        .json(&body)
        .send()
        .await
        .unwrap();
}
